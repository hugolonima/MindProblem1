<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/Relative"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.hdelanietamarin.mindproblem.LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="@string/user_name_question"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/user_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/day_text"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/day_text"
        android:layout_alignLeft="@+id/user_text"
        android:layout_alignStart="@+id/user_text"
        android:layout_marginBottom="77dp"
        android:text="@string/date_"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/year_text"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/year_text"
        android:layout_marginBottom="42dp"
        android:background="@color/colorAccent"
        android:text="@string/enter" />

    <EditText
        android:id="@+id/year_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_enter"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="225dp"
        android:ems="10"
        android:maxLength="4"
        android:hint="@string/year"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/month_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/year_text"
        android:layout_alignLeft="@+id/year_text"
        android:layout_alignStart="@+id/year_text"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="@string/month"
        android:maxLength="2"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/day_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/month_text"
        android:layout_alignLeft="@+id/month_text"
        android:layout_alignStart="@+id/month_text"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="@string/day"
        android:inputType="number"
        android:maxLength="2"
        android:visibility="invisible" />

</android.widget.RelativeLayout>
