<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_ya"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.hdelanietamarin.mindproblem.Game2Activity">


    <TextView
        android:id="@+id/textview"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:justificationMode="none"
        android:text="@string/memoriza"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ready"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_ready"
        android:layout_marginBottom="192dp"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_ready"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/pulsa"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/edit_answer"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/edit_answer"
        android:layout_toRightOf="@+id/edit_answer"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/check"
        android:textColor="@android:color/background_light"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/level"
        android:textSize="18sp"
        android:visibility="invisible" />

</android.widget.RelativeLayout>
