<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hdelanietamarin.mindproblem.Game1Activity">


    <Button
        android:id="@+id/btn_blue"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/btn_green"
        android:layout_marginLeft="224dp"
        android:layout_marginStart="224dp"
        android:layout_toEndOf="@+id/text_level"
        android:layout_toRightOf="@+id/text_level"
        android:background="@drawable/roundedbutton"
        android:onClick="btnClick"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_pink"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/btn_blue"
        android:layout_alignStart="@+id/btn_blue"
        android:layout_below="@+id/btn_blue"
        android:layout_marginTop="72dp"
        android:background="@drawable/roundedbutton"
        android:onClick="btnClick"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/text_level"
        android:layout_marginLeft="126dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/btn_blue"
        android:layout_toRightOf="@+id/btn_blue"
        android:background="@drawable/roundedbutton"
        android:onClick="btnClick"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/btn_green"
        android:layout_alignStart="@+id/btn_green"
        android:layout_alignTop="@+id/btn_pink"
        android:background="@drawable/roundedbutton"
        android:onClick="btnClick"
        android:visibility="invisible" />


    <Button
        android:id="@+id/btn_start"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/begin"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/level"
        android:textSize="18sp"
        android:visibility="invisible" />

</android.widget.RelativeLayout>
